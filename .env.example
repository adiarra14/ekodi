# ── Ekodi.ai Environment Variables ─────────────────────────
# Copy this to .env and fill in your values

# App
SECRET_KEY=change-me-in-production-use-random-string
JWT_SECRET=change-me-jwt-use-random-string
DEBUG=false

# Database (PostgreSQL in Docker, SQLite for local dev)
# Docker:
DATABASE_URL=postgresql+asyncpg://ekodi:ekodi_secret@postgres:5432/ekodi
# Local dev:
# DATABASE_URL=sqlite+aiosqlite:///./ekodi.db

# PostgreSQL (used by docker-compose)
POSTGRES_USER=ekodi
POSTGRES_PASSWORD=ekodi_secret
POSTGRES_DB=ekodi

# Redis
REDIS_URL=redis://redis:6379/0

# OpenAI (required for GPT + Whisper ASR)
OPENAI_API_KEY=sk-your-openai-api-key

# HuggingFace (for model downloads)
HF_TOKEN=hf_your-huggingface-token

# Traefik / SSL
ACME_EMAIL=admin@ekodi.ai
